<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/gambarUser"
        android:layout_width="149dp"
        android:layout_height="145dp"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/unknown"/>

    <TextView
        android:id="@+id/textProfileNama"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Nama"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toBottomOf="@+id/gambarUser"
        app:layout_constraintEnd_toStartOf="@+id/gambarUser"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/textProfileEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="Email"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toBottomOf="@+id/textProfileNama"
        app:layout_constraintEnd_toStartOf="@+id/gambarUser"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/editTextProfileNama"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="edit text nama"
        app:layout_constraintTop_toBottomOf="@+id/gambarUser"
        app:layout_constraintStart_toEndOf="@id/textProfileNama"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/editTextProfileEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="edit text email"
        android:layout_marginTop="28dp"
        app:layout_constraintTop_toBottomOf="@+id/editTextProfileNama"
        app:layout_constraintStart_toEndOf="@id/textProfileEmail"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>